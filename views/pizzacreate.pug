extends layout 
 
block content 
  h1= title 
 
  form(id='PizzaForm', action="/resource/pizzas", method="POST") 
    div.form-group 
        label.pizzaAttr(for='size') Pizza size 
        input#pizza_type(type='text', name='size') 
    div.form-group 
        label.pizzaAttr(for='crust') Pizza crust 
        input#size(type='text', name='crust') 
    div.form-group 
        label.pizzaAttr(for='count') Pizza count 
        input#cost(type='number', name='count') 
    input(type="submit") 
 
  script. 
    document.forms['PizzaForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 